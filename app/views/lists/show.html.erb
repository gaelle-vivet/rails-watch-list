<div class="cards">
  <h2><%=@list.name%></h2>
  <p><%=link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-flat"%></p>
    <%@list.movies.each do |movie|%>
      <div class="card-movie">
      <p><%=movie.title%></p>
      <%=image_tag movie.poster_url, alt: movie.title, width: 200 %>
      <p><%=movie.overview%></p>
      <p><%=movie.rating%></p>
      <%bookmark = movie.bookmarks.find_by(list: @list)%>
      <p><%= bookmark.comment %></p>
      <p><%=link_to"delete", list_bookmark_path(@list)%></p>
      </div>
    <%end%>
</div>
